{% extends 'base.html.twig' %}

{% block title %}Session{% endblock %}

{% block body %}
    <h1>Session</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ session.id }}</td>
            </tr>
            <tr>
                <th>Debut</th>
                <td>{{ session.debut ? session.debut|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fin</th>
                <td>{{ session.fin ? session.fin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>MessagesEnvoyes</th>
                <td>{{ session.messagesEnvoyes }}</td>
            </tr>
            <tr>
                <th>MessagesRecus</th>
                <td>{{ session.messagesRecus }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_session_index') }}">back to list</a>

    <a href="{{ path('app_session_edit', {'id': session.id}) }}">edit</a>

    {{ include('session/_delete_form.html.twig') }}
{% endblock %}
